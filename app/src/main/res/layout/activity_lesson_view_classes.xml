<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clasess.lesson.LessonViewClasses">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!--<include layout="@layout/toolbar"
            android:id="@+id/toolbar_note_view"
            />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            >

            <RelativeLayout
                android:id="@+id/note_view_data_time_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/note_classes_view_date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="note_classes_view_date_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/note_classes_view_time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="note_view_time_text"
                    android:textSize="14sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/note_classes_view_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note_view_data_time_layout"
                android:layout_marginBottom="6dp"
                android:text="note_view_title_text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/note_view_place_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note_classes_view_title_text_view"
                android:layout_marginBottom="3dp"
                android:text="note_view_group_title_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/note_classes_view_description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note_view_place_title_text_view"
                android:layout_marginBottom="16dp"
                android:text="note_view_description_text"
                android:textSize="16sp" />



            <TextView
                android:textSize="16sp"
                android:layout_marginBottom="3dp"
                android:id="@+id/note_classes_view_category_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note_classes_view_description_text_view"
                android:text="note_view_category_title_text" />

            <TextView
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:id="@+id/note_classes_view_category_list_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note_classes_view_category_title_text_view"
                android:text="note_view_category_list_text" />

            <TextView
                android:textSize="16sp"
                android:layout_marginBottom="3dp"
                android:id="@+id/textView5"
                android:layout_below="@+id/note_classes_view_category_list_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Розташування" />

            <RelativeLayout

                android:layout_below="@+id/note_classes_view_category_list_file_view"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/note_view_back_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:letterSpacing="0"
                    android:text="Повернутись"
                    android:textAllCaps="false"
                    android:textSize="16sp" />



            </RelativeLayout>

            <TextView
                android:textSize="16sp"

                android:id="@+id/note_classes_view_category_list_file_view"
                android:layout_below="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Посилання"
                android:layout_marginBottom="150dp"/>


        </RelativeLayout>

    </RelativeLayout>

</ScrollView>