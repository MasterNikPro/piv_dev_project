<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.fragment_settings"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="24dp">>

    <TextView
        android:id="@+id/text_view_edit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="settings_edit_email_text"
        android:layout_marginBottom="8dp"
        android:textSize="16dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_email_text_input_edit_text"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_edit_email"
        android:layout_marginBottom="8dp"

        android:hint="settings_edit_email_edit_text"
        android:inputType="textEmailAddress"
        android:textSize="16dp"
>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_view_edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_save_edit_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/new_email_text_input_edit_text"
        android:layout_marginBottom="16dp"
        android:text="settings_save_email_button_txt"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_view_edit_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_save_edit_email"
        android:layout_marginBottom="8dp"
        android:text="settings_edit_password_text"
        android:textSize="16dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_password_edit_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/text_view_edit_password"
        android:layout_marginBottom="8dp"
        android:hint="settings_edit_password_edit_text"
        android:inputType="textPassword"
        android:textSize="16dp" >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_view_edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/check_new_password_imput_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_password_edit_text_input"
        android:layout_marginBottom="8dp"
        android:hint="settings_check_password"


        android:inputType="textPassword"
        android:textSize="16dp" >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_check_edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/button_save_edit_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/check_new_password_imput_edit_text"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto_slab_bold"
        android:text="settings_save_password_button_txt"
        android:textAllCaps="false"
        android:textSize="16sp" />


    <Button
        android:id="@+id/settings_log_out_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:text="settings_logout_button"
        android:textAllCaps="false"
        android:textSize="16sp" />


</RelativeLayout>